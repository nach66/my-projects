<Window x:Class="MinesClient.showGames"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinesClient"
        mc:Ignorable="d" Loaded="Window_Loaded"
                ResizeMode="NoResize" Background="NavajoWhite"
        Title="show Games" Height="450" Width="600">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Label FontSize="18" Margin="10,0,432,0">Order by:</Label>
        <Button Grid.Row="0" Click="Button_Click_1" Margin="113,10,410,0" >uzer1</Button>
        <Button Grid.Row="0" Click="Button_Click_2" Margin="211,10,300,0" >uzer2</Button>
        <Button Grid.Row="0" Click="Button_Click_3" Margin="326,10,194,0"  >winner</Button>
        <Button Grid.Row="0" Click="Button_Click_4" Margin="432,10,76,0" >date</Button>
        <DataGrid Margin="15" Grid.Row="1" Name="gamesgrid"></DataGrid>
    </Grid>
</Window>
